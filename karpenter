  --overrides "{
    `"apiVersion`": `"v1`",
    `"spec`": {
      `"tolerations`": [
        {
          `"key`": `"nodetype`",
          `"operator`": `"Equal`",
          `"value`": `"backoffice_ec2`",
          `"effect`": `"NoSchedule`"
        }
      ]
    }
  }"
